{
  "compilerOptions": {
    "target": "es2021",
    "useDefineForClassFields": true,
    "lib": [
      "es2021",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "es2022",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
	"esModuleInterop": true,    
    "types": ["vite/client", "@cloudflare/workers-types"]    
  },
  "include": [
    "src"
  ]
}